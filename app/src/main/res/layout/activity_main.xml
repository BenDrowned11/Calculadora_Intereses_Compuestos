<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinnerCalculationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/calculation_types" />

    <EditText
        android:id="@+id/inputPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capital inicial (P)" />

    <EditText
        android:id="@+id/inputRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tasa de interÃ©s (r) %" />

    <EditText
        android:id="@+id/inputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiempo (t)" />

    <EditText
        android:id="@+id/inputAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Monto total (A)" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpiar" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Resultado"
        android:textSize="18sp" />

</LinearLayout>
